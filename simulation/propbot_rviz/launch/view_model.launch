<?xml version="1.0"?>
<launch>

  <arg name="laser_enabled" default="$(optenv PROPBOT_LMS1XX_ENABLED false)"/>
  <arg name="depth_camera_enabled" default="false"/>

  <!-- Standalone launcher to visualize the robot model. -->
  <include file="$(find propbot_description)/launch/description.launch">
    <arg name="laser_enabled" value="$(arg laser_enabled)"/>
    <arg name="depth_camera_enabled" value="$(arg depth_camera_enabled)"/>
  </include>

  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <param name="use_gui" value="true" />
  </node>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find propbot_viz)/rviz/model.rviz" />

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
</launch>
